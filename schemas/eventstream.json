{
    "id": "eventstream.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "eventstream-2.0",
    "type": "object",
    "properties": {
        "path": {
            "type": "string"
        },
        "event": {
            "type": "string",
            "enum": [
                "create",
                "update",
                "delete",
                "direct",
                "extsync",
                "console",
                "ready"
            ]
        },
        "data": {
            "type": "object"
        },
        "meta_object": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "type": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "(\\d+)\\.(\\d+)"
                },
                "owner": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "version"
            ]
        },
        "timestamp": {
            "type": "string",
            "pattern": "^(?:[1-9]\\d{3}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1\\d|2[0-8])|(?:0[13-9]|1[0-2])-(?:29|30)|(?:0[13578]|1[02])-31)|(?:[1-9]\\d(?:0[48]|[2468][048]|[13579][26])|(?:[2468][048]|[13579][26])00)-02-29)T(?:[01]\\d|2[0-3]):[0-5]\\d:[0-5]\\d(?:\\.\\d{1,})?(?:Z|[+-][01]\\d:[0-5]\\d)$"
        },
        "meta": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "type": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "(\\d+)\\.(\\d+)"
                },
                "manufacturer": {
                    "type": "string",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                        },
                        {
                            "enum": [
                                "unassigned",
                                "admin"
                            ]
                        }
                    ]
                },
                "owner": {
                    "type": "string",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                        },
                        {
                            "enum": [
                                "unassigned",
                                "admin"
                            ]
                        }
                    ]
                },
                "created": {
                    "type": "string",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^(?:[1-9]\\d{3}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1\\d|2[0-8])|(?:0[13-9]|1[0-2])-(?:29|30)|(?:0[13578]|1[02])-31)|(?:[1-9]\\d(?:0[48]|[2468][048]|[13579][26])|(?:[2468][048]|[13579][26])00)-02-29)T(?:[01]\\d|2[0-3]):[0-5]\\d:[0-5]\\d(?:\\.\\d{1,})?(?:Z|[+-][01]\\d:[0-5]\\d)$"
                        },
                        {
                            "enum": [
                                "not_available"
                            ]
                        }
                    ]
                },
                "updated": {
                    "type": "string",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^(?:[1-9]\\d{3}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1\\d|2[0-8])|(?:0[13-9]|1[0-2])-(?:29|30)|(?:0[13578]|1[02])-31)|(?:[1-9]\\d(?:0[48]|[2468][048]|[13579][26])|(?:[2468][048]|[13579][26])00)-02-29)T(?:[01]\\d|2[0-3]):[0-5]\\d:[0-5]\\d(?:\\.\\d{1,})?(?:Z|[+-][01]\\d:[0-5]\\d)$"
                        },
                        {
                            "enum": [
                                "not_available"
                            ]
                        }
                    ]
                },
                "application": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "installation": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "revision": {
                    "type": "integer"
                },
                "trace": {
                    "type": "string"
                },
                "oem": {
                    "type": "string"
                },
                "deprecated": {
                    "type": "boolean"
                },
                "redirect": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z_-]+$",
                    "minLength": 1,
                    "maxLength": 200
                },
                "size": {
                    "type": "integer"
                },
                "path": {
                    "type": "string"
                },
                "parent": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "error": {
                    "type": "object"
                },
                "icon": {
                    "type": "string"
                },
                "tag": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 2,
                        "maxLength": 20
                    }
                },
                "tag_by_user": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 2,
                        "maxLength": 20
                    }
                },
                "name_by_user": {
                    "type": "string",
                    "maxLength": 100
                },
                "warning": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "message": {
                                "type": "string"
                            },
                            "data": {
                                "type": "object"
                            },
                            "code": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "parent_name": {
                    "type": "object"
                },
                "read_only": {
                    "type": "boolean"
                },
                "original_id": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                },
                "alert": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                    }
                }
            },
            "id": "meta.json",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "meta-2.1",
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "path",
        "event",
        "meta_object",
        "meta"
    ]
}